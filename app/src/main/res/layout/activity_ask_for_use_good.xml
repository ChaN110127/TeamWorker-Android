<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/team_worker_padding"
                android:background="@color/white"
                android:padding="@dimen/team_worker_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/redNewMsg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="物品用途"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />

                <EditText
                    android:id="@+id/et_good_purpose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="如：日常办公"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/team_worker_padding"
                android:background="@color/white"
                android:padding="@dimen/team_worker_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/redNewMsg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="物品名称"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />

                <EditText
                    android:id="@+id/et_good_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入物品名称"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="@dimen/team_worker_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="数量"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />

                <EditText
                    android:id="@+id/et_good_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:hint="请输入数量"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_big" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/team_worker_padding"
                android:background="@color/white"
                android:paddingLeft="22dp"
                android:paddingTop="@dimen/team_worker_padding"
                android:text="领用详情"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_big" />

            <EditText
                android:id="@+id/et_use_details"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入物品领用详情说明"
                android:paddingBottom="@dimen/team_worker_padding"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="@dimen/team_worker_padding"
                android:textSize="@dimen/text_size_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/team_worker_padding"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="上传图片"
                    android:textColor="@color/text_black" />

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="16dp"
                    android:background="@mipmap/icon_plus" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/team_worker_padding"
            android:gravity="center">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_corner_button_selector"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</layout>