<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="上月工作任务"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_last_work_task"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/please_input"
                    android:maxLines="1"
                    android:padding="@dimen/team_worker_padding"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="实际完成任务"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_finished_work"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/please_input"
                    android:maxLines="1"
                    android:padding="@dimen/team_worker_padding"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:padding="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="任务达成率"
                        android:textColor="@color/text_black" />

                    <EditText
                        android:id="@+id/et_reach_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@null"
                        android:hint="@string/please_input"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="上月工作自评"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_self_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/please_input"
                    android:maxLines="1"
                    android:padding="@dimen/team_worker_padding"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="本月工作任务"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_this_work_task"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/please_input"
                    android:maxLines="1"
                    android:padding="@dimen/team_worker_padding"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/team_worker_padding"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="@dimen/team_worker_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/redNewMsg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="本月工作计划"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_work_plan"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/please_input"
                    android:maxLines="1"
                    android:padding="@dimen/team_worker_padding"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/team_worker_padding"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="上传工作成果图片"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/iv_picture"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="16dp"
                        android:background="@mipmap/icon_plus" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/team_worker_padding"
            android:gravity="center">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_workoff_submit_btn"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>