<?xml version="1.0" encoding="utf-8"?>
<cn.chestnut.mvvm.teamworker.widget.AnimRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_refresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_refresh"
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:background="@drawable/animation_list_refresh"
            android:scaleX="0.4"
            android:scaleY="0.4" />
    </LinearLayout>
</cn.chestnut.mvvm.teamworker.widget.AnimRefreshHeaderView>